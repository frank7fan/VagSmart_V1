<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="54dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Activity"
        android:id="@+id/select_activity"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="34dp"
        android:paddingBottom="18dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/select_activity"
        android:id="@+id/radioGroupSelectActivity">
        <RadioButton
            android:id="@+id/onlineGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Play Online Game"
            android:textSize="32dp"/>

        <RadioButton
            android:id="@+id/engineeringLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:text="Engineering Logging"
            android:textSize="32dp" />
        <RadioButton
            android:id="@+id/recordScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Video/Audio Recording"
            android:textSize="32dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_information"
        android:text="Input Information"
        android:textSize="34dp"
        android:layout_below="@+id/radioGroupSelectActivity"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="48dp"/>
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/input_information"
        android:layout_marginTop="14dp"
        android:inputType="textCapWords"
        android:hint="Your Name"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/edit_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_username"
        android:layout_below="@+id/edit_username"
        android:hint="Exercise Session"
        android:inputType="textCapSentences"
        android:textSize="24dp" />




</RelativeLayout>